<section class="container">
    <h1>Search</h1>
    <div class="search-category">
        <span><a href="/search/user"><i class="fas fa-user"></i> User</a></span> |
        <span><a href="/search/music"><i class="fas fa-music"></i> Music</a></span> |
        <span><a href="/search/movies"><i class="fas fa-film"></i> Movies</a></span>
    </div>

    {{#if isUser}}
    {{#if userList.length}}
    <form action="/search/user" method="POST" id="user-search-form">
        <p class="form-group">
            <label for="keyword">Enter User Name:
                <input type="text" name="keyword" class="form-control" id="keyword" required />
            </label>
        </p>
        <input type="submit" class="btn btn-default">
        <div class="clear"> </div>
    </form>
    {{else}}
    <p class="italics-text">No other users are registered.</p>
    {{/if}}
    {{/if}}

    {{#if isMusic}}
    <form action="/search/music" method="POST" id="music-search-form">
        <p class="form-group">
            <label for="keyword">Enter Song Name:
                <input type="text" name="keyword" class="form-control" id="keyword" required />
            </label>
        </p>
        <input type="submit" class="btn btn-default">
        <div class="clear"> </div>
    </form>
    {{/if}}

    {{#if hasResults}}
    <div class="search-results">
        {{#each resultList}}
        <p id={{@index}}><a href="/profile/{{this._id}}">{{this.FirstName}} {{this.LastName}}</a></p>
        {{/each}}
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    </form>
    {{/if}}

    <div class="users-list">
        {{#each userList}}

        <p id={{@index}} +"userlist"><a href="/profile/{{this._id}}">{{this.FirstName}} {{this.LastName}}</a></p>
        {{/each}}
    </div>
</section>