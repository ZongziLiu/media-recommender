              <input type="checkbox" name="musicGenre" value="dubstep"><span>dubstep</span>
              <input type="checkbox" name="musicGenre" value="edm"><span>edm</span>
              <input type="checkbox" name="musicGenre" value="electro"><span>electro</span>
              <input type="checkbox" name="musicGenre" value="electronic"><span>electronic</span><br>
              <input type="checkbox" name="musicGenre" value="emo"><span>emo</span>
              <input type="checkbox" name="musicGenre" value="folk"><span>folk</span>
              <input type="checkbox" name="musicGenre" value="funk"><span>funk</span>
              <input type="checkbox" name="musicGenre" value="garage"><span>garage</span>
              <input type="checkbox" name="musicGenre" value="goth"><span>goth</span><br>
              <input type="checkbox" name="musicGenre" value="guitar"><span>guitar</span>
              <input type="checkbox" name="musicGenre" value="hard-rock"><span>hard-rock</span>
              <input type="checkbox" name="musicGenre" value="hardcore"><span>hardcore</span>
              <input type="checkbox" name="musicGenre" value="heavy-metal"><span>heavy-metal</span>
              <input type="checkbox" name="musicGenre" value="hip-hop"><span>hip-hop</span><br>
              <input type="checkbox" name="musicGenre" value="indian"><span>indian</span>
              <input type="checkbox" name="musicGenre" value="indie"><span>indie</span>
              <input type="checkbox" name="musicGenre" value="jazz"><span>jazz</span>
              <input type="checkbox" name="musicGenre" value="latin"><span>latin</span>
              <input type="checkbox" name="musicGenre" value="latino"><span>latino</span><br>
              <input type="checkbox" name="musicGenre" value="metal"><span>metal</span>
              <input type="checkbox" name="musicGenre" value="metalcore"><span>metalcore</span>
              <input type="checkbox" name="musicGenre" value="new-age"><span>new-age</span>
              <input type="checkbox" name="musicGenre" value="opera"><span>opera</span>
              <input type="checkbox" name="musicGenre" value="piano"><span>piano</span><br>
              <input type="checkbox" name="musicGenre" value="party"><span>party</span>
              <input type="checkbox" name="musicGenre" value="punk"><span>punk</span>
              <input type="checkbox" name="musicGenre" value="rock"><span>rock</span>
              <input type="checkbox" name="musicGenre" value="romance"><span>romance</span>
              <input type="checkbox" name="musicGenre" value="sad"><span>sad</span><br>
              <input type="checkbox" name="musicGenre" value="summer"><span>summer</span>
              <input type="checkbox" name="musicGenre" value="techno"><span>techno</span>
              <input type="checkbox" name="musicGenre" value="trance"><span>trance</span>
              <input type="checkbox" name="musicGenre" value="work-out"><span>work-out</span>
              <input type="checkbox" name="musicGenre" value="world-music"><span>world-music</span><br>
            </div>

            <div class="form-group">
              <label for="movieGenre">Favourate Movie Genre:</label><br>
              <input type="checkbox" name="movieGenre" value="romantic">Romantic<br>
              <input type="checkbox" name="movieGenre" value="thriller">Thriller<br>
              <input type="checkbox" name="movieGenre" value="action">Action<br>
              <input type="checkbox" name="movieGenre" value="comedy">Comedy<br>
              <input type="checkbox" name="movieGenre" value="family">Family<br>
            </div>

            <div class="form-group">
              <label for="password1">Password:</label>
              <input type="password" name="password1" class="form-control" id="password1" required />
            </div>
            <div class="form-group">
              <label for="password2">Confirm Password:</label>
              <input type="password" name="password2" class="form-control" id="password2" required />
            </div>

            <button type="submit" class="btn btn-default text-white">Submit</button>
          </form>
        </div>
      </div>
