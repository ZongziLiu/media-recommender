<body>
    <main>
        <section>
            <nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href="/profile/my-profile">Home</a>
  <a class="navbar-brand" href="/search">Search</a>
  <a class="navbar-brand" href="/logout">Logout</a>
</nav>
           
        </section>
        <section>
            <div class="container">
                {{!-- <h1 class="home-page-header">Welcome!</h1> --}}
                <div class="row">
                <div class="user-info col-md-6">
                    <article class="user-data">
                        {{#if isLoggedInUserProfile}}
                        <h3>My Info</h3>
                        {{else}}
                        <h3>User Info</h3>
                        {{/if}}
                        
                        <p>First Name: {{userData.FirstName}}</p>
                        <p>Last Name: {{userData.LastName}}</p>
                        <p>Email: {{userData.Email}}</p>
                        <p>Gender: {{userData.Gender}}</p>
                        <p>Location: {{userData.Location}}</p>
                        <p>Age: {{userData.Age}}</p>
                    </article>
                </div>

                <div class="playlists col-md-6">
                    <article>
                        <h3>Playlists</h3>
                        {{#each userPlaylists}}
                        <p id="{{@index}}userPlaylist"><a href="/playlist/{{this._id}}">{{this.Name}}</a></p>
                        {{/each}}
                    </article>
                </div>
                </div>

                {{#if isLoggedInUserProfile}}
                <div class="recommendations">
                    <article>
                        <h3>Recommendations</h3>
                        <p>Here is a track for you:</p>
                        <p><span class="song-name">{{recommendedSong.name}}</span> by <span class="artist-name">{{recommendedSong.artist.name}}</span></p>
                        {{#if recommendedSong.previewUrl}}
                        <p>Preview it <a href={{recommendedSong.previewUrl}} target="_blank">here</a> or search on Spotify</p>
                        {{else}}
                        <p class="italics-text">Preview not available.</p>
                        {{/if}}
                        <p>Click <a href={{recommendedSong.artist.artistUrl}} target="_black">here</a> for more tracks by <span class="artist-name">{{recommendedSong.artist.name}}</span></p>
                    </article>
                </div>
                
                {{/if}}
            </div>
        </section>
    </main>
</body>